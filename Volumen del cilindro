#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

float vol_cilindro(float r, float a);              // Prototipo
void main()
{ float radio, altura, volumen;
  cout<<"Ingrese el radio: ";
  cin>>radio;
  cout<<"Ingrese la altura: ";
  cin>>altura;
  volumen= vol_cilindro(radio, altura);            // Llamada
  cout<<"El volumen del cilindro es:"<<volumen;
 getch();
}

float vol_cilindro(float r, float a)               // Declarar
{ float v, Pi;   
  Pi=3.141516;
  v= Pi*r*r*a;
return v;
}
